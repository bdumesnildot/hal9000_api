{
  "name": "HAL9000",
  "version": "1.0.0",
  "description": "An experimental API built to explore AI capabilities and patterns using modern technologies. This project serves as a playground for testing various AI features and integrations.",
  "main": "src/app.ts",
  "license": "MIT",
  "tasks": {
    "dev": "deno run --allow-env --env-file=.env --allow-net --allow-write --allow-read  --watch src/app.ts",
    "test": "deno test --allow-env --env-file=.env --allow-net --allow-write --allow-read  "
  },
  "imports": {
    "@ai-sdk/anthropic": "npm:@ai-sdk/anthropic@^1.1.5",
    "@ai-sdk/google": "npm:@ai-sdk/google@^1.1.6",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^1.1.5",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.2",
    "@std/assert": "jsr:@std/assert@1",
    "@t3-oss/env-core": "npm:@t3-oss/env-core@^0.12.0",
    "ai": "npm:ai@^4.1.9",
    "hono": "npm:hono@^4.6.19",
    "ollama-ai-provider": "npm:ollama-ai-provider@^1.2.0",
    "zod": "npm:zod@^3.24.1",
    "zod-form-data": "npm:zod-form-data@^2.0.5"
  },
  "compilerOptions": {},
  "lint": {
    "include": ["src/"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": []
  }
}
